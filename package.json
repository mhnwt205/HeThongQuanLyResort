  "license": "ISC",
  "description": "Hệ thống quản lý resort với SQL Server, MVC architecture và RESTful APIs",
  "dependencies": {
    "express": "^4.18.2",
    "mssql": "^10.0.1",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "ejs": "^3.1.9",
    "express-session": "^1.17.3",
    "connect-flash": "^0.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
